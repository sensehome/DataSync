{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "RedisDBSettings": {
    "Host": "localhost",
    "Port": 6379,
    "DatabaseIndex": 3
  },

  "MongoDBSettings": {
    "Host": "mongodb://localhost:27017",
    "Name": "sensehome"
  },

  "DataSyncSettings": {
    "BrokerSettings": {
      "Host": "localhost",
      "Port": 1883
    },
    "ClientSettings": {
      "Id": "5fe73a5329262c8851c6b180",
      "UserName": "DataSync-Service",
      "Password": "datasync-service",
      "AutoReconnectInSec": 5
    },
    "SyncSchedulerSettings": {
      "StartServiceInSec": 10,
      "LoopServiceInMin": 5
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [

      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.json",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                "rollingInterval": "Hour",
                "retainedFileCountLimit": 6
              }
            }
          ]
        }
      }
    ]
  }
}
